
    <div id="content">
      <div class="data-form">
        <form class="form-signin" action="<%=`/gardenProducts/${gardenProduct._id}/update?_method=PUT`%>" method="POST">
          <h2 class="form-signin-heading">Edit garden products:</h2>
          <label for="inputgardenProductName">Product Name</label>
          <input type="text" name="name" id="inputgardenProductName" class="form-control" value="<%= gardenProduct.name %>" placeholder="gardenProduct Name" autofocus required>
          <label for="inputDescription">Product Description</label><label for="inputDescription">Description</label>
          <input type="text" name="description" id="inputDescription" class="form-control" value="<%= gardenProduct.description %>" placeholder="gardenProduct Description" required>
          <label for="inputPrice">Price</label>
          <input type="number" step="0.01" name="price" id="inputPrice" class="form-control" value="<%= gardenProduct.price %>" placeholder="Price" required/>
          <label for="fileInput">File Input</label>
          <input type="file" name="imageURL" id="fileInput" accept="image/*" required>
          <br />
          <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
        </form>
      </div>
    </div>

