
  <div id="page">
    <div id="body">
      <div id="content">
				
					<h1>Products</h1>
				Log in as admin to add locations

				<% if (currentUser && currentUser.admin) { %>
				<form action="/products/new" method="GET">
					<button name="newProduct">Add New Product</button>
				</form>
				<% } %>
				<div id="article">
				<p>
				</p>

					<ul class="section">
						
						<% products.forEach(product => { %>
						<li>
							<img src="images/<%= product.imageURL %>" alt="">
							<div>
								<h2><%= product.name %> </h2>
								<p><%= product.description %></p>
								<p> $ <%= product.price %></p>
								<% if (currentUser && currentUser.admin) { %>
								<form action="<%=`/products/${product._id}/edit`%>">
									<button name="edit" value="<%=product._id%>">
								  		Edit Product 
									</button>
								</form>	
								<form action="<%= `/products/${product._id}/delete?_method=DELETE` %>">
									<button name="delete" value="<%=product._id%>" onclick="return confirm('Are you sure you want to delete this record?')">
								  		Delete
									</button>
								</form>	
								<%};%>
							</div>
						</li>
						<%});%>
					</ul>
					
					
				</div>
		</div>
	</div>
</div>